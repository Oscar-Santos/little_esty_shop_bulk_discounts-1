<%= @discount.id %>


<%= form_with model: @discount, url: "/merchant/#{@discount.merchant.id}/bulk_discounts/#{@discount.id}" do |form|  %>
<%= form.label :discount %>
<%= form.number_field :discount, value: @discount.discount %>
<%= form.label :quantity %>
<%= form.number_field :quantity, value: @discount.quantity %>
<%= form.submit 'Edit Discount' %>
<% end %>
